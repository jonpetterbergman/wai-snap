                       unordered-containers >= 0.2.7.1,
                       case-insensitive >= 1.2.0.6,
                       mtl >= 2.2.1,
                       bytestring >= 0.10.6.0,
                       blaze-builder >= 0.4.0.2,
                       time >= 1.5.0.1,
                       wai >= 3.2.1,
                       network >=2.6.2.1,
                       text >=1.2.2.1,
                       http-types >=0.8.6,
                       transformers >=0.4.2.0,
                       unix-compat >=0.4.2.0,
                       attoparsec >= 0.13.0.2,
                       cookie >= 0.4.1.6,
                       blaze-html >=0.8.1.1,
                       filepath >= 1.4.0.0,
                       deepseq >= 1.4.1.1,
                       hashable >= 1.2.4.0,
                       network-uri >= 2.6.1.0,
                       data-default >= 0.7.1,
                       directory >= 1.2.2.0,
                       digestive-functors >= 0.8.0.1,
                       wai-digestive-functors >= 0.3,
                       resourcet >= 1.1.7.4
  hs-source-dirs:      src
  default-language:    Haskell2010